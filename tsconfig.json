{
  "$schema": "https://json.schemastore.org/tsconfig",
  "compilerOptions": {
    "strict": true,
    "sourceMap": false,
    "esModuleInterop": true,
    "removeComments": true,
    "declaration": false,
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",
    "outDir": "./dist",
    "skipLibCheck": true
  },
  "include": ["src/**/*", "test/**/*", "*.ts", "*.mjs", "*.cjs"],
  "exclude": ["node_modules", "dist"]
}
